            android:screenOrientation="portrait" />
        <activity
            android:name="com.vigneshpranav.pamun.ResearchReportActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vigneshpranav.pamun.CountryListsActivity"
            android:configChanges="orientation"
